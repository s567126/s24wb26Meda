extends layout

block content
    h1= title
    p Welcome to #{title}

    
    - let results =  [{name : "beta fish" , life_span : 4, color : "red"},{name : "Clownfish" , life_span : 6, color : "orange"},{name : "Neon Tetra" , life_span: 4, color : "Blue"}]


        div(class = "container-fluid")
            div(class="row")
                each item, index in results
                    div(class="col-sm-2" onclick=`buy(${index})`)
                        ul
                            li  #{item.name}
                            li  #{item.life_span}
                            li  #{item.color}
                
                script.
                    function buy(index){
                        alert('You purchased item ' + index);
                    }